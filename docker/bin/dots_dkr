#!/bin/bash -i
set -e

cd "${DOTFILES_ROOT}"

br_import 'print'

source ${DOTFILES_DOCKER_BIN}/cnt.sh
source ${DOTFILES_DOCKER_BIN}/img.sh

[[ "$1" == "img" ]] && { shift; images_main "$@"; exit $?; }

[[ "$1" == "cnt" ]]                              \
    && { shift; containers_main "$@"; exit $?; } \
    || {        containers_main "$@"; exit $?; }

print_info "\nUsage:    img ${IMAGES_USAGE}\n\t[cnt] ${CONTAINERS_USAGE}"

